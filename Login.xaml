<Window x:Class="ATM_System.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ATM_System"
        mc:Ignorable="d"
        Title="ATM Management System" Height="630" Width="682">
    <Grid Margin="0,0,0,0">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF35A6C6"/>
                <GradientStop Color="#FF35A4C3" Offset="1"/>
                <GradientStop Color="#FF164451" Offset="0.42"/>
                <GradientStop Color="#FF194E5D" Offset="0.484"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Label Content="Enter Card Number" HorizontalAlignment="Left" Margin="182,119,0,0" VerticalAlignment="Top" FontSize="24" FontWeight="Bold"/>
        <TextBox x:Name="CardNumberTextBox" HorizontalAlignment="Left" Margin="152,166,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="334" Height="37"/>
        <Button Content="Login" HorizontalAlignment="Left" Margin="75,410,0,0" VerticalAlignment="Top" Click="LoginButton_Click" FontSize="24" Width="146">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF165B61"/>
                    <GradientStop Color="#FF2D7B81" Offset="1"/>
                    <GradientStop Color="#FF203B3D" Offset="0.471"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="btnSignup" Content="Sign Up" HorizontalAlignment="Left" Margin="409,410,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.682,3.151" FontSize="24" Width="157" Click="btnSignup_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF156D6A"/>
                    <GradientStop Color="#FF397876" Offset="1"/>
                    <GradientStop Color="#FF1C3A3A" Offset="0.444"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Label Content=" Enter Pin" HorizontalAlignment="Left" Margin="240,231,0,0" VerticalAlignment="Top" FontSize="24" FontWeight="Bold" RenderTransformOrigin="1.201,0.488" Width="158"/>

        <Label Content="Login To BlueRock Bank" HorizontalAlignment="Left" Margin="186,13,0,0" VerticalAlignment="Top" Width="486" Height="54" FontSize="36" FontFamily="Algerian" FontWeight="Bold"/>
        <Image HorizontalAlignment="Left" Height="57" Margin="37,13,0,0" VerticalAlignment="Top" Width="85" Source="/WhatsApp Image 2025-03-29 at 13.56.19_acb2df10.jpg" RenderTransformOrigin="0.619,0.109"/>
        <PasswordBox x:Name="PinPasswordBox" HorizontalAlignment="Left" Margin="148,278,0,0" VerticalAlignment="Top" Width="338" Height="37"/>

    </Grid>
</Window>
