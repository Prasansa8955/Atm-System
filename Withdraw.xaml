<Window x:Class="ATM_System.Withdraw"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ATM_System"
        mc:Ignorable="d"
        Title="ATM Management System" Height="914" Width="682">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF457876"/>
                <GradientStop Color="#FF27817E" Offset="1"/>
                <GradientStop Color="#FF304242" Offset="0.396"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Label Content="Blue Rock Bank" HorizontalAlignment="Left" Margin="287,10,0,0" VerticalAlignment="Top" FontSize="36" FontFamily="Algerian" FontWeight="Bold"/>
        <Label x:Name="Withdrawal" Content="Withdraw Amount" HorizontalAlignment="Center" Margin="0,487,0,0" VerticalAlignment="Top" FontSize="24" FontWeight="Bold"/>
        <Button Content="Cancle" HorizontalAlignment="Left" Margin="390,650,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Width="97" Height="47" FontSize="22" FontWeight="Bold" Click="BackButton_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF257D84"/>
                    <GradientStop Color="#FF33676C" Offset="1"/>
                    <GradientStop Color="#FF234245" Offset="0.434"/>
                </LinearGradientBrush>
            </Button.Background>
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.347"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button Content="Withdrow" HorizontalAlignment="Left" Margin="104,642,0,0" VerticalAlignment="Top" Width="120" Height="48" FontSize="22" FontWeight="Bold" Click="WithdrawButton_Click" >
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF309B80"/>
                    <GradientStop Color="#FF209E83" Offset="1"/>
                    <GradientStop Color="#FF2F4E47" Offset="0.463"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <TextBox x:Name="AmountTextBox" HorizontalAlignment="Center" Margin="0,547,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="390" Height="37"/>
        <Image HorizontalAlignment="Left" Height="67" Margin="48,10,0,0" VerticalAlignment="Top" Width="86" Source="/WhatsApp Image 2025-03-29 at 13.56.19_acb2df10.jpg" RenderTransformOrigin="1.108,0.362"/>
        <Image HorizontalAlignment="Left" Height="55" Margin="231,216,0,0" VerticalAlignment="Top" Width="110"/>
        <Image HorizontalAlignment="Left" Height="271" Margin="206,147,0,0" VerticalAlignment="Top" Width="402" Source="/images (3).jpg" RenderTransformOrigin="0.611,0.505"/>

    </Grid>
</Window>
